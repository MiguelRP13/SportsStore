@model ProductsListViewModel
@{
    ViewData["Title"] = "List";
}

<h2>Product List</h2>

@foreach(Product p in Model.Products)
{
    <div>
        <h3>@p.Name</h3>
        <p>@p.Description</p>
        <h4>@p.Price.ToString("c")</h4>
    </div>

}

<div page-model="@Model.PagingInfo" page-action="List"></div>